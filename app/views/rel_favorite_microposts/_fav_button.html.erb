<% if current_user.favorite?(micropost) %>
  <%= form_for(current_user.rel_favorite_microposts.find_by(micropost_id: micropost.id), html: { method: :delete }) do |f| %> 
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= button_tag( class: "btn btn-warning btn-xs") do %>
      <% content_tag :span, "favorite", class: "glyphicon glyphicon-star" %>
    <% end %>
  <% end %>
<% else %>
  <%= form_for(current_user.rel_favorite_microposts.build) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
     <%= button_tag( class: "btn btn-xs") do %>
      <% content_tag :span, "favorite", class: "glyphicon glyphicon-star-empty" %>
    <% end %>
  <% end %>
<% end %>